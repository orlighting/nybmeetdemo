<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.nybproject.meet.mapper.MessageMapper">
    <resultMap id="MessageMap" type="com.example.nybproject.meet.pojo.Message" >
        <result column="id" property="id" />
        <result column="admin_id" property="adminId" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="looked" property="looked" />
        <result column="delete" property="delete" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="findsById" resultMap="MessageMap">
        select * from message where id = #{id}
    </select>
    <insert id="add">
        insert into message (id, admin_id, user_id, title, content, looked, `delete`, create_time, update_time)
        values (#{id}, #{adminId}, #{userId}, #{title}, #{content}, #{looked}, #{delete}, #{createTime}, #{updateTime})
    </insert>
    <select id="findNewId" resultType="java.lang.Integer">
        select max(id) from message
    </select>
    <select id="findsLookedMessage" resultMap="MessageMap">
        select * from message where user_id = #{userId} and looked = true
    </select>
    <select id="findsNotLookMessage" resultMap="MessageMap">
        select * from message where user_id = #{userId} and looked = false
    </select>

</mapper>
