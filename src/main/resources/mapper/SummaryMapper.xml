<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.nybproject.meet.mapper.SummaryMapper">
    <resultMap id="SummaryMap" type="com.example.nybproject.meet.pojo.Summary" >
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="admin_id" property="adminId" />
        <result column="kind" property="kind" />
        <result column="country_num" property="countryNum" />
        <result column="company_num" property="companyNum" />
        <result column="area" property="area" />
        <result column="buyer_num" property="buyerNum" />
        <result column="media_num" property="mediaNum" />
        <result column="turnover" property="turnover" />
        <result column="delete" property="delete" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="findsById" resultMap="SummaryMap">
        select * from summary where id = #{id} and `delete` = false
    </select>
    <select id="findNewId" resultType="java.lang.Integer">
        select max(id) from summary
    </select>
    <insert id="add">
        insert into summary (id, user_id, admin_id, `kind`, country_num, company_num, area, buyer_num, media_num, turnover, `delete`, create_time, update_time)
        values (#{id}, #{userId}, #{adminId}, #{kind}, #{countryNum}, #{companyNum}, #{area}, #{buyerNum}, #{mediaNum}, #{turnover}, #{delete}, #{createTime}, #{updateTime})
    </insert>
    <select id="findsAll" resultMap="SummaryMap">
        select * from summary where `delete` = false
    </select>
</mapper>
