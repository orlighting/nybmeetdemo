<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.nybproject.meet.mapper.UserMapper">
    <resultMap id="UserMap" type="com.example.nybproject.meet.pojo.User" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="tele_num" property="teleNum" />
        <result column="company" property="company" />
        <result column="department" property="department" />
        <result column="email" property="email" />
        <result column="portraiture" property="portraiture" />
        <result column="identity_card" property="identityCard" />
        <result column="kind" property="kind" />
        <result column="check_state" property="checkState" />
        <result column="delete" property="delete" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="findsById" resultMap="UserMap">
        select * from user where id = #{id}
    </select>
    <select id="findAll" resultMap="UserMap">
        select * from user
    </select>
    <select id="findForCheck" resultMap="UserMap">
        select * from user where id = #{id} and password = #{password}
    </select>
    <select id="findNewId" resultType="java.lang.Integer">
        select max(id) from user
    </select>
    <insert id="add">
        insert into user (id, name, password, tele_num, company, department, email, portraiture, identity_card, kind, check_state, `delete`, create_time, update_time)
        values (#{id}, #{name}, #{password}, #{teleNum}, #{company}, #{department}, #{email}, #{portraiture}, #{identityCard}, #{kind}, #{checkState}, #{delete}, #{createTime}, #{updateTime})
    </insert>
    <select id="findsByIdentityCard" resultType="java.lang.Integer">
        select id from user where identity_card = #{identityCard}
    </select>
    <select id="findsByTeleNum" resultType="java.lang.Integer">
        select id from user where tele_num = #{teleNum}
    </select>

</mapper>
